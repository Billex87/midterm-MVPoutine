<body>
  <script type="text/javascript" src="/scripts/timer.js"></script>
  <%- include('partials/_navbar') %>
    <%for(let order of orders){%>
      <section id="order">
        <%console.log(order)%>
        <section class="order-summary">
          <!-- test  -->
          <div class="order-header">ORDERS</div>

          <div class="order-id"> ORDER ID
          </div>
          <p class="details">#<%=order.orderID%></p>

            <div class="order-id"> ORDER STATUS</div>
            <p class="details">New order ready for preperation</p>
            <p id="order-details"> ORDER DETAILS</p>

          <%for(let orderItem of order.menuItems){%></p>
            <div class="details"><%=orderItem.name%>
            </div>
            <div class="order-id">QNTY:
            </div>
            <p class="details"><%=orderItem.quantity%></p>
            <%}%>
            <div class="order-id"> TIME</div>
              <div id="countdown-timer" class="btn"></div>

              <div class="order-id"> TOTAL PRICE</div>
              <div class="total-price">$<%=order.totalPrice/100%></div>

                <button id="orderCompleteButton" class="button" runat="server" Text="order-complete">Order Complete</button>

        </section>
      </section>
      <%}%>
</body>
</html>
