      <!-- Main content container  -->
      <main class="content-container">

         <!-- Photo Div -->
        <section>
          <img src= '/images/Poutine-Header.png'  alt="Header Image" width= "100%" />
        </section>

          <!-- Menu Div -->
        <section class="menu">
            <!-- LEFT SIDE OF MENU CONTAINER  -->

            <!-- RIGHT SIDE OF MENU CONTAINER  -->
              <%for(let item of templateVar){%>
              <div class= "menu-box">
                <div class= "menu-item menu-left" >
                   <p><%=item.name%></p>
                   <p><%=item.description%></p>
                   <div>
                    $<%=item.price /100%>
                   </div>
                  </div>
                <div class= "menu-item menu-right" >
                  <img class= "menu-itemimage" src="<%= item.imgurl %>" alt= "">
                 <div>
                   <button id="order-button" class="order-button">Order</button>
                  </div>
                </div>
              </div>
              <%}%>
        </section>
      </main>
