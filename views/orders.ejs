<body>
  <script type="text/javascript" src="/scripts/timer.js"></script>


  <%- include('partials/_navbar') %>



    <%for(let item in orders){%>
      <section id="order">

        <section class="order-summary">
          <!-- test  -->
          <div class="order-header">Thank you for your order</div>
          <div class="btn">Get your poutine within 20 minutes or less.
            If we're lying, we're buying</div>
          <div class="order-id">Here is your order id: <%=item%>
          </div>
          <div class="btn">Currently being prepared</div>
          <%for(let orderItem in orders[item]){%>
            <div class="your-order">Here is your order: <%=orders[item][orderItem].name%>
            </div>
            <div class="item-quantity">Quantity: <%=orders[item][orderItem].quantity%>
            </div>
            <div id="countdown-timer" class="btn"></div>
            <%}%>
              <div class="btn">$ <%=orders[item][0].total_price%>
              </div>
              <!-- <button id="orderCompleteButton">Order Complete</button> -->
        </section>
      </section>
      <%}%>



</body>

